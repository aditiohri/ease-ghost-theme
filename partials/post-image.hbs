{{#if feature_image}}
    <figure class="gh-article-image">
        <img
            class="post-image"
            srcset="{{img_url feature_image size="s"}} 100w,
                    {{img_url feature_image size="m"}} 200w,
                    {{img_url feature_image size="l"}} 300w,
                    {{img_url feature_image size="xl"}} 450w,
                    {{img_url feature_image size="xxl"}} 520w"
            sizes="(min-width: 1200px) 10vw"
            src="{{img_url feature_image size="s"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        >
        {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
{{/if}}